#include <iostream>
#include <string>
using namespace std;
int i, l=0;
 class CharDiff{
    string  str1, str2;
public:
    int count(){
        cin>>str1;
        cin>>str2;
        if(strlen("AACD")!=strlen("ABCD"))
            cout<<"Blad";

        for(i=0;i<strlen("AACD");i++){
            if(str1[i]!=str2[i])
                l++;
        }
        cout<<l;
    }
};

int main()
{
    CharDiff a;
    a.count();
    
    return 0;
}
